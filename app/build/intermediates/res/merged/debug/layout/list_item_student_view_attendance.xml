<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:background = "@drawable/cell_shape_layout">

    <TextView
        android:id="@+id/student_serialNo"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "10"
        android:padding = "5dp"
        android:text = "@string/tv_sno"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        />
    <View
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_width="2dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/subject_name"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_weight = "20"
        android:padding = "5dp"
        android:text = "@string/tv_subject"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"/>
    <View
        android:layout_gravity="center"
        android:background="@color/black"
        android:layout_width="2dp"
        android:layout_height="match_parent" />



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="30"
        >



          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_weight="1">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:paddingTop="15dp"
                  >

                  <TextView
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = "2.2"
                      android:padding = "5dp"
                      android:text = "@string/tv_total_lecture"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true" />
                  <TextView
                      android:id="@+id/lecture_count"
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = ".8"
                      android:padding = "5dp"
                      android:text = "Count"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true"
                      android:gravity="center"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3">

                  <TextView
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = "2"
                      android:padding = "5dp"
                      android:text = "@string/tv_percentage_attendance"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true" />
                  <TextView
                      android:id="@+id/percentage_count"
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = "1"
                      android:padding = "5dp"
                      android:text = "Percent"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true"
                      android:gravity="center"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3">

                  <TextView
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = "2.2"
                      android:padding = "5dp"
                      android:text = "@string/tv_student_status_present"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true" />
                  <TextView
                      android:id="@+id/color_present_id"
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = ".8"
                      android:padding = "5dp"
                      android:text = "color"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true"
                      android:gravity="center"/>
              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3">

                  <TextView
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = "2.2"
                      android:padding = "5dp"
                      android:text = "@string/tv_student_status_absent"
                      android:textSize="18sp"
                      android:textColor="@color/black"
                      android:singleLine="true" />
                  <TextView
                     android:id="@+id/color_absent_id"
                      android:layout_width = "0dp"
                      android:layout_height = "wrap_content"
                      android:layout_weight = ".8"
                      android:padding = "5dp"
                      android:text = "color"
                      android:textSize="18sp"
                      android:singleLine="true"
                      android:textColor="@color/black"
                      android:gravity="center"/>

    </LinearLayout>

</LinearLayout>

        <LinearLayout
            android:id="@+id/chartView"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            />

    </LinearLayout>

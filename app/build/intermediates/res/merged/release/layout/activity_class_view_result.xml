<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Result"
        android:typeface="serif"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="Class"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <View
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="35dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/result_degreeSpinner"
            android:spinnerMode="dropdown"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="Section"
            android:textSize="25sp"
            android:textStyle="bold" />
        <View
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="35dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/result_sectionSpinner"
            android:spinnerMode="dropdown"
            android:clickable="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:paddingLeft="20dp"
            android:text="Term"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />
        <View
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="35dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/result_termSpinner"
            android:spinnerMode="dropdown"
            android:clickable="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="Assessment"
            android:textSize="25sp"
            android:textStyle="bold"
            />
        <View
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="35dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/result_assessmentSpinner"
            android:spinnerMode="dropdown"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="subject"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <View
            android:layout_gravity="center"
            android:background="@color/black"
            android:layout_width="1dp"
            android:layout_height="35dp" />
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:id="@+id/result_subjectSpinner"
            android:spinnerMode="dropdown"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:id="@+id/show_result_Submit"
        android:text="@string/btnSearch"
        android:background="@drawable/btn"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>